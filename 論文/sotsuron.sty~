\def\makecover{
 \thispagestyle{empty}
 \title{\vspace{3cm}{\Huge \underline{\@thesisprefix{}\@draftsuffix}}\vspace{5mm}\\
        {\Huge \@covertitle}\vspace{5mm}\\
 	{\Large {\@coverdate}提出}\vspace{6cm}}
\date{}
\author{{\huge 指導教員} {\Huge \quad\@coveradvisora}\\
        \phantom{{\huge 指導教員}} {\Huge \quad\@coveradvisorb}\vspace{20mm}\\
         {\huge \@coverbelong}\vspace{5mm}\\
         {\Huge \@coverauthor}\vspace{1cm}}
 \maketitle
 \thispagestyle{empty}
 \newpage
}
